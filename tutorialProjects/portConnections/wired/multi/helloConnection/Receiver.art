capsule Receiver{

    [[rt::header_preface]]
    `
        #include <iostream>
    `

    service behavior port messagePort~ : Protocol[5];

    statemachine{
        initial -> Receiving;
        state Receiving{
            message: on messagePort.message
            `
                int i = *((int*) rtdata);
                std::cout << getName() << ": Received: " << i << std::endl;
            `;
        };
    };
};